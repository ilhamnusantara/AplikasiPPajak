<?xml version="1.0" encoding="utf-8"?>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bgnewstyle"
            tools:context="com.example.cekpajak.views.Pph21Golongan">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="859dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="110dp"
                    android:text="Nominal Belanja"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/nHonor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="25dp"
                    android:background="#DDDDDD"
                    android:textColor="#000000"
                    android:ems="8"
                    android:inputType="numberSigned|numberDecimal"
                    android:textSize="10pt" />

                <Button
                    android:id="@+id/bGol1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginRight="100dp"
                    android:text="Golongan I/II" />

                <Button
                    android:id="@+id/bGol3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="100dp"
                    android:text="Golongan III" />

                <Button
                    android:id="@+id/bGol4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="100dp"
                    android:text="Golongan IV" />

                <Button
                    android:id="@+id/nonPns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="100dp"
                    android:text="Non PNS Kegiatan" />
                <TextView
                    android:id="@+id/tPot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="80dp"
                    android:text="Jumlah Potongan Honor"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/nPotangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="25dp"
                    android:background="#DDDDDD"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/tHas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:text="Jumlah Bersih yang diterima"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/nHasil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="25dp"
                    android:background="#DDDDDD"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="10pt" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

