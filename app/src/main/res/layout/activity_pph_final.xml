<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgnewstyle"
        tools:context="com.example.cekpajak.views.PphFinal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="859dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="3dp">
    

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="110dp"
                android:layout_marginRight="25dp"
                android:text="Nominal Belanja PPh 4(2) Final"
                android:textColor="#000"
                android:textSize="10pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nPajak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="25dp"
                android:background="#DDDDDD"
                android:ems="8"
                android:inputType="numberSigned|numberDecimal"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/tPelKons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:text="Jasa Konstruksi - Pelaksana Konstruksi :"
                android:textColor="#000"
                android:textSize="7pt"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="1. Kualifikasi Kecil"
                    android:textColor="#000"
                    />

                <Button
                    android:id="@+id/bPel1"
                    android:layout_width="59dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="20dp"
                    android:text="2%"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="2. Menengah dan Besar" />

                <Button
                    android:id="@+id/bPel2"
                    android:layout_width="59dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="20dp"
                    android:text="3%"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="3. Tidak Memiliki Kualifikasi" />

                <Button
                    android:id="@+id/bPel3"
                    android:layout_width="59dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="20dp"
                    android:text="4%"
                    android:textSize="12dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:paddingTop="2dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#bbb" />

            <TextView
                android:id="@+id/tKonsul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:text="Jasa Konsultan Perencanaan dan Pengawasan :"
                android:textColor="#000000"
                android:textSize="7pt"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="1. Kecil-Menengah-Besar"
                    android:textColor="#000"/>

                <Button
                    android:id="@+id/bKon1"
                    android:layout_width="59dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="20dp"
                    android:text="4%"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="2. Tidak Memiliki Kualifikasi"
                    android:textColor="#000"/>

                <Button
                    android:id="@+id/bKon2"
                    android:layout_width="59dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="20dp"
                    android:text="6%"
                    android:textSize="12dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#bbb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tSTanah"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:text="Sewa Tanah/Bangunan"
                    android:textColor="#000000"
                    android:textSize="7pt"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bSewa"
                    android:layout_width="59dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="20dp"
                    android:text="6%"
                    android:textSize="12dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="25dp"
                android:background="#bbb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tHUndian"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:text="Hadiah Undian"
                    android:textColor="#000000"
                    android:textSize="7pt"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bUndian"
                    android:layout_width="59dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="20dp"
                    android:text="25%"
                    android:textSize="12dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="25dp"
                android:background="#bbb" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="Pajak yang harus dibayar :"
                android:textColor="#000000"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/nBPajak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="8dp"
                android:text=""
                tools:text="100000"
                android:background="#DDD"
                android:textColor="#000"
                android:textSize="25pt" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

