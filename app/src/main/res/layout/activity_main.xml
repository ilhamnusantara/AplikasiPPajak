<?xml version="1.0" encoding="utf-8"?>


<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgnewstyle"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="861dp"
            android:backgroundTint="#FFFFFF"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_goneMarginBottom="15dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="2dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="85dp"
                android:layout_marginTop="110dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/gladtoseeu"
                android:textAlignment="textStart"
                android:textColor="#FFF"
                android:textSize="8pt"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginTop="-10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="20pt"
                android:textStyle="bold"
                android:typeface="sans" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/illustration_2" />

            <Button
                android:id="@+id/bPp"
                android:layout_width="246dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:scaleType="centerInside"
                android:text="Cek Perhitungan Pajak"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/bInform"
                android:layout_width="246dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:text="informasi Perhitungan Pajak"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/callhelp"
                android:textAlignment="center"
                android:textColor="#476072"
                android:textSize="6pt"
                android:textStyle="bold"
                android:typeface="sans" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

